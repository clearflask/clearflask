<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>selfhost-run</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <files>
        <file>
            <source>${basedir}/src/main/resources/logback-selfhost.xml</source>
            <outputDirectory>/</outputDirectory>
            <destName>logback.xml</destName>
        </file>
        <file>
            <source>${basedir}/src/test/resources/logging-dev.properties</source>
            <outputDirectory>/</outputDirectory>
            <destName>logging.properties</destName>
        </file>
        <file>
            <source>${basedir}/src/main/resources/config-selfhost.cfg</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.parent.basedir}/COPYING</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
