<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>docker-compose-self-host</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/docker-compose-selfhost/mysql-db</directory>
            <outputDirectory>/mysql-db/</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/docker-compose-selfhost/config-selfhost.cfg</source>
            <outputDirectory>/server/</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/docker-compose-selfhost/connect.config.selfhost.json</source>
            <outputDirectory>/connect/</outputDirectory>
            <destName>connect.config.json</destName>
        </file>
        <file>
            <source>${basedir}/src/main/docker/compose/docker-compose.self-host.yml</source>
            <outputDirectory>/</outputDirectory>
            <destName>docker-compose.yml</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/COPYING</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
